<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <% if !@pin.image.url.nil? %>
     <img src="<%= @pin.image.url(:medium) %>">
     <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}" %>
  </p>
</div>
<br/>
<a href="/">
<i class="fa fa-home" aria-hidden="true"></i>
  Back to Home
  </a>