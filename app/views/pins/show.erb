<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>
<div class="show-pin">
  <% if !@pin.image.url.nil? %>
     <img src="<%= @pin.image.url(:medium) %>">
     <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}" %>
  </p>
  <%= link_to repin_path(pin), class: "btn btn-default", method: "post" do %>
  <i class="fa fa-thumb-tack" aria-hidden="true">
  Repin!
<% end %> 
<h3>This pin has been repinned by:</h3>
   <% @users.each_slice(3) do |row| %>
   <% pins = @users.pins %>
    <div class="row"> 
      <% row.each do |user| %>
      <div>
      <%= "#{user.first_name} #{user.last_name}" %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class="repin">
<%= "This pin has been pinned by..." %>
      <%  @users.each  do |user| %>
        <%= "#{user.first_name} #{user.last_name} /" %>
      <% end %>
  <%= render partial: "shared/repin_form", locals: {pin: @pin} %>
</div>
<br/>
<a href="/">
<i class="fa fa-home"></i>
  Back to Home
</a>